    participant MV as :MatriculaView
    participant MC as :MatriculaControl
    participant AD as :AlunoDAO
    participant PD as :PlanoDAO
    participant M as :Matricula
    participant MD as :MatriculaDAO

    R->>MV: adicionarMatricula(cpfAluno, idPlano, dataInicio)
    activate MV

    MV->>MC: adicionarMatricula(cpfAluno, idPlano, dataInicio)
    activate MC

    MC->>AD: buscarPorCpf(cpfAluno)
    activate AD
    AD-->>MC: objAluno
    deactivate AD

    MC->>PD: buscarPorId(idPlano)
    activate PD
    PD-->>MC: objPlano
    deactivate PD

