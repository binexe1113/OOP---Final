sequenceDiagram
    actor A as Aluno
    participant V as :TreinoView
    participant C as :TreinoControl
    participant D as :TreinoDAO
    participant T as :Treino
    
    A->>V: acessarFichaDeTreino(idAluno)
    activate V
    
    V->>C: consultarTreinoPorLoop(idAluno)
    activate C
    
    C->>D: listarTodosTreinos()
    activate D
    
    D-->>C: List<Treino>
    deactivate D
    
    loop
        C->>T: getAluno()
        activate T
        T-->>C: Aluno Associado
        deactivate T
        
        alt Aluno corresponde ao Aluno Logado
            break Treino Encontrado
                C-->>V: Treino (Objeto)
            end
        end
    end
    
    V->>C: gerarDescricaoFormatada(Treino)
    C-->>V: String formatada
    deactivate C
    V-->>A: Exibe informações do treino
    deactivate V
